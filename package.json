{
  "name": "@meindonsa/js-utils",
  "version": "0.0.1",
  "description": "A comprehensive TypeScript utility library for Angular, Vue, and React projects",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./file": {
      "import": "./dist/esm/file/index.js",
      "require": "./dist/cjs/file/index.js",
      "types": "./dist/types/file/index.d.ts"
    },
    "./date": {
      "import": "./dist/esm/date/index.js",
      "require": "./dist/cjs/date/index.js",
      "types": "./dist/types/date/index.d.ts"
    },
    "./validation": {
      "import": "./dist/esm/validation/index.js",
      "require": "./dist/cjs/validation/index.js",
      "types": "./dist/types/validation/index.d.ts"
    },
    "./format": {
      "import": "./dist/esm/format/index.js",
      "require": "./dist/cjs/format/index.js",
      "types": "./dist/types/format/index.d.ts"
    },
    "./random": {
      "import": "./dist/esm/random/index.js",
      "require": "./dist/cjs/random/index.js",
      "types": "./dist/types/random/index.d.ts"
    },
    "./array": {
      "import": "./dist/esm/array/index.js",
      "require": "./dist/cjs/array/index.js",
      "types": "./dist/types/array/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "typedoc",
    "prepublishOnly": "npm run build && npm test",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meindonsa/js-utils.git"
  },
  "author": "Meindonsa",
  "license": "GNU",
  "bugs": {
    "url": "https://github.com/Meindonsa/js-utils/issues"
  },
  "homepage": "https://github.com/Meindonsa/js-utils#readme",
  "keywords": [
    "typescript",
    "utilities",
    "utils",
    "helpers",
    "angular",
    "vue",
    "react",
    "file",
    "validation",
    "format",
    "date"
  ],
  "sideEffects": false
}
